<h1>Edit Details:</h1>

<form action="/Messages/Details/@(Model.MessageId)" method="post">
  <label for="author">Author</label>
  <input id="author" name="author" type="text">
  <label for="body">Body</label>
  <input id="body" name="body" type="text">
  <label for="dateposted">Date Posted</label>
  <input id="dateposted" name="dateposted" type="datetime-local">
  @Html.Label("Group")
  @Html.DropDownList("GroupId") 
  <button type="submit">Go!</button>
</form>

<a href="/Messages/Details/@(Model.MessageId)"><p>Back to details</p></a>